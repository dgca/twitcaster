datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String          @id @default(cuid())
  address        String?         @unique
  fid            BigInt?
  twitterOptions TwitterOptions?
}

model TwitterOptions {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  twitterId       String    @unique
  screenName      String
  accessToken     String?
  refershToken    String?
  expiresAt       DateTime?
  withFcastMeLink Boolean   @default(false)
  requireHashtag  Boolean   @default(false)
}
